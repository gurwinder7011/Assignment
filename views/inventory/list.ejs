        <div>
            <a href="/inventory/add" class="btn btn-primary align-self-end" role="button" style="margin-left: 50px;">
                <i class="fas fa-plus-circle"></i> 
                ADD
            </a>                

        <div class="table-responsive" style="padding: 50px;">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr style="font-weight: bold; color: white;">
                    <th class="text-center">Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr style="color: #FFBCBC;">
                        <td class="text-center"><%= InventoryList[count].name %></td>
                        <td class="text-center"><%= InventoryList[count].contact %></td>
                        <td class="text-center"><%= InventoryList[count].email %></td>
                        <td class="text-center">
                            <a href="/inventory/edit/<%= InventoryList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
